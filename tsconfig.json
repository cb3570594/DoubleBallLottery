{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "./dist/",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"],
  },
}
